@model IEnumerable<Assignment1.Dtos.HomeDto>

<p>
    @Html.ActionLink("Add a note", "AddNote")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Title", "ViewNotes", new { sortOrder = ViewBag.NameSortParm })
        </th>
       
        <th>
            @Html.ActionLink("Date Created", "ViewNotes", new { sortOrder = ViewBag.DateSortParam })
        </th>
        <th>
            @Html.ActionLink("Date Modified", "ViewNotes", new { sortOrder = ViewBag.DateSortParam2 })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.DateCre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateMod)
        </td>
        <td>
            @Html.ActionLink("Edit", "ModifyNote", new { id=item.Id }) |
            @Html.ActionLink("Details", "DisplayNote", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
